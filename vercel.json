{
  "version": 2,
  "functions": {
    "public/index.php": {
      "runtime": "vercel-php@0.7.1"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/public/index.php"
    }
  ],
  "buildCommand": "npm run build && composer install --no-dev --optimize-autoloader",
  "installCommand": "npm ci && composer install --no-dev",
  "env": {
    "APP_ENV": "production",
    "APP_DEBUG": "false"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, s-maxage=86400" }
      ]
    }
  ]
}